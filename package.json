{
  "name": "copilot-test",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "homepage": "https://vektor8891.github.io/copilot-test",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest --coverage",
    "deploy": "gh-pages -t -d dist",
    "predeploy": "expo export -p web",
    "lint": "eslint --ext .js,.ts,.tsx,.mdx --max-warnings 0",
    "eslint:github-action": "eslint src/",
    "prepare": "husky"
  },
  "dependencies": {
    "@expo/metro-runtime": "~3.2.3",
    "expo": "~51.0.37",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-svg": "^15.2.0",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/js": "^9.12.0",
    "@types/jest": "^29.5.13",
    "@types/react": "~18.2.79",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "gh-pages": "^6.2.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.8.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,mdx}": "eslint --fix"
  },
  "private": true
}
